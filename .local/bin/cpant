#!/bin/bash

[ -d "$GRIM_DEFAULT_DIR" ] || mkdir -p $GRIM_DEFAULT_DIR

case $1 in
	"-f") 
		grim # Capturar la pantalla entera
		notify-send -u low "Captura realizada" "Imagen guardada en $GRIM_DEFAULT_DIR" ;;
	"-s")
		grim -g "$(slurp -w 0)" # Capturar zona seleccionada
		notify-send -u low "Captura realizada" "Imagen guardada en $GRIM_DEFAULT_DIR" ;;
	*)
		exit ;;
esac

