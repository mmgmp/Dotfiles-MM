#!/bin/bash

# Script para buscar en Internet sin tener que abrir el buscador.
# En caso de meter ciertas claves buscara en webs especificas.

order="$(printf "" | tofi --require-match=false --prompt-text='Buscar en Internet: ')"
[ -z "$order" ] && exit

case "$order" in
	yt\ *)
		search_url="https://www.youtube.com/results?search_query=" ;;
	pdb\ *)
		search_url="https://www.protondb.com/search?q=" ;;
	*)
		search_url="https://duckduckgo.com/?t=h_&q=" ;;
esac

word="$(printf "$order" | sed 's/^[^ ]* //')"
xdg-open "$search_url""$word"

exit
