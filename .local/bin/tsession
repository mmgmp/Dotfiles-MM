#!/bin/bash

# Muestra un menú con diferentes opciones para el sistema.

selected="$(printf "Bloquear\nCerrar sesión\nSuspender\nReiniciar\nApagar" | tofi)"

case $selected in
	"Bloquear")
		~/.local/bin/lockscreen ;;
	"Cerrar"*)
		swaymsg exit ;;
	"Suspender")
		~/.local/bin/lockscreen & systemctl suspend ;;
	"Reiniciar")
		systemctl reboot ;;
	"Apagar")
		systemctl poweroff ;;
	*)
		exit 0 ;;
esac

