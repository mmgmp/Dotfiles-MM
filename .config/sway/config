# Esta es la configuracion de sway de Marcos Mikolta
# Mi Github: http://github.com/mmgmp/
# Mi Web: http://marcosmikolta.xyz

# Esta configuración desactiva el control manual
# y lo reemplaza por el script de autotiling, todo esto
# esta pensado para usarse con mi script de SAM
# (http://github.com/mmgmp/SAM)

#= CONFIGURACION GENERAL ============================================================#

# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Movimiento al estilo vim
set $left h
set $down j
set $up k
set $right l

# Activar waybar
bar {
     swaybar_command waybar	
}

#= DISPOSITIVOS =====================================================================#

# Configuración del teclado
input type:keyboard {
    xkb_layout es
	xkb_options caps:escape
	xkb_numlock enabled
}

# Configuración de la trackball
input 1133:50184:Logitech_USB_Trackball {
	scroll_button button8
	scroll_method on_button_down
}

#= APARIENCIA =======================================================================#

# Estilo de ventanas
default_border pixel 2
default_floating_border pixel 2
client.focused #2E9EF4 #2E9EF4 #2E9EF4

# Espacios entre ventanas
gaps inner 5

# Fondo de pantalla
include ~/.config/sway/wallpaper

#= AUTOEJECUTAR =====================================================================#

exec_always --no-startup-id autotiling
exec --no-startup-id mako
exec --no-startup-id gammastep -c ~/.config/gammastep/config.ini
exec --no-startup-id "/usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1"

# Barra de cambio de volumen/brillo
set $WOBSOCK $XDG_RUNTIME_DIR/wob.sock
exec --no-startup-id rm -f $WOBSOCK && mkfifo $WOBSOCK && tail -f $WOBSOCK | wob

#= ENERGÍA ==========================================================================#

exec swayidle -w \
	timeout 300 '~/.local/bin/lockscreen' \
	timeout 600 'swaymsg "output * dpms off"' \
	resume 'swaymsg "output * dpms on"' \
	before-sleep '~/.local/bin/lockscreen'

# No suspender en pantalla completa
for_window [class=".*"] inhibit_idle fullscreen
for_window [app_id=".*"] inhibit_idle fullscreen

#= ATAJOS DE TECLAS =================================================================#

# Ejecutar programas
bindsym $mod+t exec $TERMINAL
bindsym $mod+b exec $BROWSER, workspace 2
bindsym $mod+d exec $RUN_LAUNCHER | xargs swaymsg exec --
bindsym $mod+f exec $FILE_MANAGER
bindsym $mod+n exec $RSS_READER

# Recargar la configuración de sway
bindsym $mod+Shift+r reload

# Añadir a marcadores el elemento copiado
bindsym $mod+Alt+b exec ~/.local/bin/add-bookmark

# Scripts de tofi
bindsym $mod+Shift+q exec ~/.local/bin/tofi-session-manager
bindsym $mod+Shift+i exec ~/.local/bin/tofi-wifi-menu
bindsym $mod+Shift+p exec ~/.local/bin/tofi-pass
bindsym $mod+Shift+m exec ~/.local/bin/tofi-usb-mounter
bindsym $mod+Shift+b exec ~/.local/bin/tofi-bookmark-menu

#---- Funciónes ----#

# Captura de pantalla
bindsym Print exec cpant 1
bindsym Alt+Print exec cpant 2

# Control del brillo
bindsym XF86MonBrightnessDown exec brightnessctl s 5%- | sed -En 's/.*\(([0-9]+)%\).*/\1/p' > $WOBSOCK
bindsym XF86MonBrightnessUp exec brightnessctl s 5%+ | sed -En 's/.*\(([0-9]+)%\).*/\1/p' > $WOBSOCK

# Control de audio - Portátil
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5% && pactl get-sink-volume @DEFAULT_SINK@ | awk 'NR==1{print substr($5,1,length($5)-1)}' > $WOBSOCK
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5% && pactl get-sink-volume @DEFAULT_SINK@ | awk 'NR==1{print substr($5,1,length($5)-1)}' > $WOBSOCK
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym Alt+XF86AudioLowerVolume exec pactl set-source-volume @DEFAULT_SOURCE@ -5% && pactl get-source-volume @DEFAULT_SOURCE@ | awk 'NR==1{print substr($5,1,length($5)-1)}' > $WOBSOCK
bindsym Alt+XF86AudioRaiseVolume exec pactl set-source-volume @DEFAULT_SOURCE@ +5% && pactl get-source-volume @DEFAULT_SOURCE@ | awk 'NR==1{print substr($5,1,length($5)-1)}' > $WOBSOCK

# Control de audio - Sobremesa
bindsym Alt+F1 exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym Alt+F2 exec pactl set-sink-volume @DEFAULT_SINK@ -5% && pactl get-sink-volume @DEFAULT_SINK@ | awk 'NR==1{print substr($5,1,length($5)-1)}' > $WOBSOCK
bindsym Alt+F3 exec pactl set-sink-volume @DEFAULT_SINK@ +5% && pactl get-sink-volume @DEFAULT_SINK@ | awk 'NR==1{print substr($5,1,length($5)-1)}' > $WOBSOCK
bindsym Alt+F4 exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym Alt+Shift+F2 exec pactl set-source-volume @DEFAULT_SOURCE@ -5% && pactl get-source-volume @DEFAULT_SOURCE@ | awk 'NR==1{print substr($5,1,length($5)-1)}' > $WOBSOCK
bindsym Alt+Shift+F3 exec pactl set-source-volume @DEFAULT_SOURCE@ +5% && pactl get-source-volume @DEFAULT_SOURCE@ | awk 'NR==1{print substr($5,1,length($5)-1)}' > $WOBSOCK

#---- Ventanas ----#

# Cerrar ventana enfocada
bindsym $mod+q kill

# Maximizar ventana enfocada
bindsym $mod+m fullscreen

# Cambiar ventana enfocada ente flotante o tilling
bindsym $mod+Shift+space floating toggle

# Cambiar enfoque entre las ventanas flotantes y tilling
bindsym $mod+Tab focus mode_toggle

# Mover ventanas flotantes con $mod y click izquierdo
# Redimensionarlas con $mod y click derecho
# Funciona nos ventanas no flotantes
# Cambiar normal a invertido para cambiar los botones del ratón
floating_modifier $mod normal

#---- Movimiento ----#

# Moverse entre escritorios
bindsym $mod+Ctrl+$right workspace next 
bindsym $mod+Ctrl+$left workspace prev

# Mover el foco entre ventanas
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# Mover la ventana enfocada
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# Cambiar de escritorio
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Mover ventana enfocada al escritorio
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# Cambiar tamaño de las ventanas
bindsym $mod+y resize shrink width 20px
bindsym $mod+u resize shrink height 20px
bindsym $mod+i resize grow height 20px
bindsym $mod+o resize grow width 20px

#---- Scratchpads ----#

# Scratchpad:

    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show

#= REGLAS DE VENTANAS ===============================================================#

for_window [app_id="pavucontrol"] floating enable
assign [class="Firefox-esr"] 2
assign [class="steam"] 7

#= EXTRAS ===========================================================================#

# Requeridos para el correcto funcionamiento de sway
include /etc/sway/config.d/*
include /etc/sway/config-vars.d/*
