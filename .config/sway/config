#= CONFIGURACION GENERAL ============================================================#

# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Movimiento al estilo vim
set $left h
set $down j
set $up k
set $right l

# Programas predeterminados
set $term foot
set $browser firefox
set $menu tofi-drun | xargs swaymsg exec --
set $filem foot sh -c lf

include /etc/sway/config-vars.d/*

# Configuración del teclado
input type:keyboard {
    xkb_layout es
	xkb_options caps:escape
	xkb_numlock enabled
}

# Configuración de la trackball
input 1133:50184:Logitech_USB_Trackball {
	scroll_button button8
	scroll_method on_button_down
}

# Activar waybar
bar {
     swaybar_command waybar	
}

# Estilo de ventanas
default_border pixel 2
default_floating_border pixel 2
client.focused #2E9EF4 #2E9EF4 #2E9EF4

# Espacios entre ventanas
gaps outer 5
gaps inner 10

# Fondo de pantalla
output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill
#output * bg ~/.local/share/backgrounds/pixel-paisaje.png fill

#= AUTOEJECUTAR =====================================================================#

exec_always autotiling
exec swaync

#= ENERGÍA ==========================================================================#

exec swayidle -w \
	timeout 300 'swaylock -f -c 2c2b32' \
	timeout 600 'swaymsg "output * dpms off"' \
	resume 'swaymsg "output * dpms on"' \
	before-sleep 'swaylock -f -c 2c2b32'

#= ATAJOS DE TECLAS =================================================================#

# Ejecutar programas
bindsym $mod+t exec $term
bindsym $mod+b exec $browser
bindsym $mod+d exec $menu
bindsym $mod+f exec $filem

# Centro de notificaciones
bindsym $mod+Shift+n exec swaync-client -t -sw

# Cerrar ventana enfocada
bindsym $mod+q kill

# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for draggibrightnessctl s 40%-ng.
floating_modifier $mod normal

# Recargar la configuración de sway
bindsym $mod+Shift+c reload

# Scripts de tofi
bindsym Shift+$mod+q exec ~/.local/bin/tofi-session-manager
bindsym Shift+$mod+i exec ~/.local/bin/tofi-wifi-menu.sh
bindsym Shift+$mod+p exec ~/.local/bin/tofi-pass.sh

# Control del brillo
bindsym XF86MonBrightnessDown exec brightnessctl s 5%-
bindsym XF86MonBrightnessUp exec brightnessctl s 5%+

# Control de audio - Portátil
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym Alt+XF86AudioLowerVolume exec pactl set-source-volume @DEFAULT_SOURCE@ -5%
bindsym Alt+XF86AudioRaiseVolume exec pactl set-source-volume @DEFAULT_SOURCE@ +5%

# Control de audio - Sobremesa
bindsym Alt+F1 exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym Alt+F2 exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym Alt+F3 exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym Alt+F4 exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym Alt+Shift+F2 exec pactl set-source-volume @DEFAULT_SOURCE@ -5%
bindsym Alt+Shift+F3 exec pactl set-source-volume @DEFAULT_SOURCE@ +5%

# Moverse entre escritorios
bindsym $mod+Ctrl+$right workspace next 
bindsym $mod+Ctrl+$left workspace prev

# Mover el foco entre ventanas
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# Mover la ventana enfocada
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# Cambiar de escritorio
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Mover ventana enfocada al escritorio
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# Cambiar tamaño de las ventanas
bindsym $mod+y resize shrink width 20px
bindsym $mod+u resize shrink height 20px
bindsym $mod+i resize grow height 20px
bindsym $mod+o resize grow width 20px

# Layout stuff:

# Cambiar entre horizontal y vertical
# bindsym $mod+h splith
# bindsym $mod+v splitv

# Cambiar a diferentes estilos
# bindsym $mod+s layout stacking
# bindsym $mod+w layout tabbed
# bindsym $mod+Space layout toggle split

# Maximizar ventana enfocada
bindsym $mod+m fullscreen

# Toggle the current focus between tiling and floating mode
bindsym $mod+Shift+space floating toggle

# Swap focus between the tiling area and the floating area
bindsym $mod+Tab focus mode_toggle

# Move focus to the parent container
bindsym $mod+a focus parent

# Scratchpad:

    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show

include /etc/sway/config.d/*
