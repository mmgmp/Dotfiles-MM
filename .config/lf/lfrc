# Ajustes básicos
set hidden true
set ignorecase true
set icons true
set drawbox true
set sixel true
set previewer ~/.config/lf/previewer.sh
set cursorpreviewfmt "\033[7m"

# Quitar teclas predeterminadas
map m
map n
map r

# Crear carpeta
cmd mkdir %printf " Nombre del directorio: "; read ans; mkdir "$ans"; printf "Se ha creado el directorio '$ans'"

# Crear archivo
cmd mkfile %printf " Nombre del archivo: "; read ans; touch "$ans"; printf "Se ha creado el archivo '$ans'"

# Borrar archivos
cmd remove %printf " ¿Borrar? [s/N]"; read ans; [ $ans = "s" ] && rm -frv $fx || printf "Operación cancelada"

# Descomprimir
cmd extract ${{
	case "$f" in
		*.zip) unzip "$f" ;;
		*.tar) tar -xvf "$f" ;;
		*.tar.xz) tar -xvf "$f" ;;
		*.rar) unrar x "$f" ;;
		*.7z) 7zz x "$f" ;;
		*) printf "Formato no soportado" ;;
	esac
}}

# Crear link simbólico
cmd symbolic ${{
	current_path=$(pwd)
	name=$(basename "$f")
	ln -s "$f" $current_path/Enlace_a_$name
}}

# Cambiar fondo en sway
cmd background ${{
	printf "output * bg "$f" fill" > ~/.config/sway/wallpaper
	sway reload
}}

# Abrir archivos
cmd open ${{
	case $(file --mime-type -Lb "$f") in
		text/*) $EDITOR "$f" ;;
		image/*) swayimg "$f" ;;
		*/pdf) zathura "$f" & ;;
		*) xdg-open "$f" & ;;
	esac
}}

# Hacer ejecutable
cmd chmodx ${{
	chmod +x $fx
}}

# Renombrar
map A :rename; cmd-end
map I :rename; cmd-home

# Movimiento
map gd cd ~/Descargas/
map gD cd ~/Documentos/
map gi cd ~/Imágenes/
map gm cd ~/Música/
map gv cd ~/Vídeos/

map gs cd ~/.local/bin/
map gr cd ~/Documentos/GitHub/

# Configuración de teclas
map md mkdir
map mf mkfile
map R remove
map E extract
map S symbolic
map X chmodx
map bg background
