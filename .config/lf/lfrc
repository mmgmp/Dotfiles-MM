# Ajustes básicos
set hidden true
set ignorecase true
set icons true
set drawbox true
#set sixel true
#set previewer ~/.config/lf/previewer.sh

# Quitar teclas predeterminadas
map m
map n
map r

# Crear carpeta
cmd mkdir %printf " Nombre del directorio: "; read ans; mkdir $ans; echo "Se ha creado el directorio '$ans'"

# Crear archivo
cmd mkfile %printf " Nombre del archivo: "; read ans; touch $ans; echo "Se ha creado el archivo '$ans'"

# Borrar archivos
cmd remove %printf " ¿Borrar? [s/N]"; read ans; [ $ans = "s" ] && rm -frv $fx || printf "Operación cancelada"

# Descomprimir
cmd extract ${{
	case "$f" in
		*.zip) unzip "$f" ;;
		*.tar) tar -xvf "$f" ;;
		*.rar) unrar x "$f" ;;
		*.7z) 7zz x "$f" ;;
		*) printf "Formato no soportado" ;;
	esac
}}

# Renombrar
map A :rename; cmd-end
map I :rename; cmd-home

# Configuración de teclas
map md mkdir
map mf mkfile
map R remove
map E extract

