# Ajustes generales
auto-reload yes
max-items 50
reload-threads 10
show-read-feeds yes

# Desasignar teclas
unbind-key j
unbind-key k

# Asignar teclas estilo vim
bind-key j down
bind-key k up

# Buscador externo
browser "firefox %u"
macro v set browser "mpv %u --really-quiet --no-terminal" ; open-in-browser-and-mark-read ; set browser "firefox %u"

# Estilo de interfaz
highlight feedlist "[║│]" default default bold
highlight feedlist "╠═.*" default default bold
feedlist-format "%?T?║%4i %n %8u %t (%T) &╠ %-8t════════════════════════════════════════?"

