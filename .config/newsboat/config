# Ajustes generales
auto-reload yes
max-items 50
reload-threads 10
show-read-feeds yes

unbind-key j
bind-key j down
unbind-key k
bind-key k up

browser "firefox %u"

# i son numeros
# n es la N que indica nuevo
# u es (0/50)
feedlist-format "%?T? %1 %n %1 %u %1 %t %10 & ----------------------------?"

macro v set browser "mpv %u --really-quiet --no-terminal" ; open-in-browser-and-mark-read ; set browser "firefox %u"

